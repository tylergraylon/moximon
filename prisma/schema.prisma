// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  address String
  outcome String
  wager   String?
  name    String
  trans   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum CLAIMED {
  YES
  NO
}

model Prizes {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  address String
  name    String
  outcome String
  wager   String
  claimed CLAIMED @default(NO)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Whitelist {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  address String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum PAYMENTSTATUS {
  PAID
  UNPAID
}

model unpaid {
  id      String        @id @default(auto()) @map("_id") @db.ObjectId
  address String
  outcome String
  name    String
  status  PAYMENTSTATUS @default(UNPAID)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model presale {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  address    String
  amountAda  Float
  amountXmax Float
  trans      String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
